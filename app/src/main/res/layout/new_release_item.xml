<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_item_linearlayout"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#eeeeee"
    android:layout_marginBottom="5dp"
    app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/movie_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/image_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtmovie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movie_icon"
            app:layout_constraintBottom_toTopOf="@+id/txtMovieDirector"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/txtMovieDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtmovie_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movie_icon"
            />


</androidx.constraintlayout.widget.ConstraintLayout>